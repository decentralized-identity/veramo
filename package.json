{
  "name": "daf",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "publish": "lerna publish",
    "bootstrap": "lerna bootstrap",
    "test": "jest --config=jest.json",
    "test:watch": "jest --config=jest.json --watch",
    "daf": "node ./packages/daf-cli/bin/daf",
    "semantic-release": "semantic-release --dry-run"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/git": "^7.0.18",
    "@smartive/semantic-release-lerna": "^1.0.0",
    "@types/jest": "^24.0.23",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.4",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "semantic-release": "^16.0.0-beta.31",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uport-project/daf.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "prepare": false,
    "ci": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@smartive/semantic-release-lerna",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/changelog.md"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): New version ${nextRelease.version} \n\n${nextRelease.notes} [skip ci]"
        }
      ],
      "@semantic-release/github"
    ],
    "branches": [
      "master",
      {
        "name": "alpha",
        "prerelease": true
      }
    ]
  }
}
